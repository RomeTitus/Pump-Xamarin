<?xml version="1.0" encoding="utf-8"?>

<ContentView
    x:Class="Pump.Layout.Dashboard.ManualScheduleHomeScreen"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:Xamarin.Forms.MaskedEntry;assembly=Xamarin.Forms.MaskedEntry"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ContentView.Content>
        <ScrollView>
            <FlexLayout
                Margin="20"
                Direction="Column"
                JustifyContent="SpaceAround"
                VerticalOptions="Center">

                <StackLayout>
                    <Label
                        FontSize="Subtitle"
                        HorizontalOptions="Center"
                        Text="Pump"
                        TextColor="White"
                        TextDecorations="Underline" />
                    <Frame
                        BackgroundColor="White"
                        BorderColor="Black"
                        CornerRadius="10"
                        HorizontalOptions="FillAndExpand">
                        <ScrollView HeightRequest="100">
                            <FlexLayout
                                x:Name="ScrollViewManualPump"
                                JustifyContent="SpaceBetween"
                                Wrap="Wrap">
                                <FlexLayout.GestureRecognizers>
                                    <TapGestureRecognizer x:Name="ScrollViewManualPumpTap"
                                                          Tapped="ScrollViewManualPump_Tapped" />
                                </FlexLayout.GestureRecognizers>
                                <ActivityIndicator
                                    AutomationId="ActivityIndicatorManualPump"
                                    HorizontalOptions="Center"
                                    IsEnabled="true"
                                    IsRunning="True"
                                    IsVisible="True"
                                    VerticalOptions="Center" />


                            </FlexLayout>

                        </ScrollView>
                    </Frame>

                </StackLayout>

                <StackLayout>
                    <Label
                        FontSize="Subtitle"
                        HorizontalOptions="Center"
                        Text="Zone"
                        TextColor="White"
                        TextDecorations="Underline" />
                    <Frame
                        BackgroundColor="White"
                        BorderColor="Black"
                        CornerRadius="10"
                        HorizontalOptions="FillAndExpand">


                        <ScrollView HeightRequest="100">

                            <FlexLayout
                                x:Name="ScrollViewManualZone"
                                JustifyContent="SpaceBetween"
                                Wrap="Wrap">
                                <FlexLayout.GestureRecognizers>
                                    <TapGestureRecognizer x:Name="ScrollViewManualZoneTap"
                                                          Tapped="ScrollViewManualZoneTap_Tapped" />
                                </FlexLayout.GestureRecognizers>

                                <ActivityIndicator
                                    AutomationId="ActivityIndicatorManualZone"
                                    HorizontalOptions="Center"
                                    IsEnabled="true"
                                    IsRunning="True"
                                    IsVisible="True"
                                    VerticalOptions="Center" />


                            </FlexLayout>
                        </ScrollView>
                    </Frame>
                </StackLayout>

                <StackLayout
                    HeightRequest="40"
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal">

                    <Label
                        x:Name="LableTimeDuration"
                        FontSize="Subtitle"
                        HorizontalOptions="StartAndExpand"
                        Text="Duration"
                        TextColor="White"
                        VerticalOptions="Center" />
                    <control:MaskedEntry
                        x:Name="MaskedEntryTime"
                        HorizontalOptions="StartAndExpand"
                        Keyboard="Numeric"
                        Mask="XX:XX"
                        Placeholder="HH:MM"
                        VerticalOptions="Center" />

                    <Label
                        FontSize="Body"
                        HorizontalOptions="Fill"
                        IsVisible="false "
                        Text="Run with Schedule"
                        TextColor="White"
                        VerticalOptions="Center" />
                    <Switch
                        x:Name="SwitchRunWithSchedule"
                        HorizontalOptions="EndAndExpand"
                        IsVisible="false "
                        VerticalOptions="Center" />

                </StackLayout>

                <StackLayout>
                    <Button
                        x:Name="ButtonStartManual"
                        BackgroundColor="DeepSkyBlue"
                        Clicked="ButtonStartManual_Clicked"
                        CornerRadius="10"
                        Text="Start"
                        TextColor="White" />
                    <Button
                        x:Name="ButtonStopManual"
                        BackgroundColor="DeepSkyBlue"
                        Clicked="ButtonStopManual_Clicked"
                        CornerRadius="10"
                        IsEnabled="False"
                        Text="Stop"
                        TextColor="White" />
                </StackLayout>

            </FlexLayout>
        </ScrollView>
    </ContentView.Content>
</ContentView>